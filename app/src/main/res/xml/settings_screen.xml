<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/appearance"
        app:icon="@drawable/ic_appearance_24dp">

        <SwitchPreference
            app:key="@string/theme"
            app:defaultValue="true"
            app:title="@string/dark_mode" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/about"
        app:icon="@drawable/ic_about_24dp">

        <Preference
            app:key="version"
            app:selectable="false"
            app:title="@string/version"
            app:summary="@string/version_info"/>

    </PreferenceCategory>

</PreferenceScreen>